/dts-v1/;
#include "mt7981.dtsi"
#include <dt-bindings/gpio/gpio.h>

/ {
	#address-cells = <1>;
	#size-cells = <1>;
	model = "mt7981-cmcc_a10";
	compatible = "mediatek,mt7981", "mediatek,mt7981-rfb";

	chosen {
		stdout-path = &uart0;
		tick-timer = &timer0;
	};

	config {
		bootcmd = "if mtkboardboot; then exit; fi; httpd";
		blink_led = "red:status";
		system_led = "green:status";
	};

	mtd-layout {
		layout@0 {
			label = "default";
			// mtd layout for stock ubi firmware, support immortalwrt/openwrt 112M ubi firmware
			mtdids = "nmbm0=nmbm0";
			mtdparts = "nmbm0:1024k(bl2),512k(u-boot-env),2048k(Factory),2048k(fip),114688k(ubi)";
		};

		layout@1 {
			label = "expand(114m)";
			// mtd layout for 114m ubi firmware
			mtdids = "nmbm0=nmbm0";
			mtdparts = "nmbm0:1024k(bl2),512k(u-boot-env),2048k(Factory),2048k(fip),116736k(ubi)";
		};

		layout@2 {
			label = "qwrt";
			// mtd layout for lean qwrt
			mtdids = "nmbm0=nmbm0";
			mtdparts = "nmbm0:1024k(bl2),512k(u-boot-env),2048k(Factory),2048k(fip),1024k(rsv0),110M(ubi)";
		};

		layout@3 {
			label = "openwrt-firmware";
			// dual system layout: ubi + ubi2 (each 56MiB)
			mtdids = "nmbm0=nmbm0";
			mtdparts = "nmbm0:1024k(bl2),512k(u-boot-env),2048k(Factory),2048k(fip),57344k(ubi),57344k(ubi2)";
			boot_part = "ubi";
			factory_part = "ubi";
			sysupgrade_kernel_ubipart = "ubi";
			sysupgrade_rootfs_ubipart = "ubi";
		};

		layout@4 {
			label = "openwrt-firmware2";
			// dual system layout: ubi + ubi2 (boot from ubi2)
			mtdids = "nmbm0=nmbm0";
			mtdparts = "nmbm0:1024k(bl2),512k(u-boot-env),2048k(Factory),2048k(fip),57344k(ubi),57344k(ubi2)";
			boot_part = "ubi2";
			factory_part = "ubi2";
			sysupgrade_kernel_ubipart = "ubi2";
			sysupgrade_rootfs_ubipart = "ubi2";
		};

		layout@5 {
			label = "openwrt-kernel-rootfs-a";
			// A/B kernel+rootfs with shared ubifs (data)
			mtdids = "nmbm0=nmbm0";
			mtdparts = "nmbm0:1024k(bl2),512k(u-boot-env),2048k(Factory),2048k(fip),4096k(kernel),4096k(kernel_1),32768k(rootfs),32768k(rootfs_1),40960k(ubifs)";
			boot_part = "kernel";
			factory_part = "kernel";
			sysupgrade_kernel_ubipart = "kernel";
			sysupgrade_rootfs_ubipart = "rootfs";
		};

		layout@6 {
			label = "openwrt-kernel-rootfs-b";
			// A/B kernel+rootfs with shared ubifs (data)
			mtdids = "nmbm0=nmbm0";
			mtdparts = "nmbm0:1024k(bl2),512k(u-boot-env),2048k(Factory),2048k(fip),4096k(kernel),4096k(kernel_1),32768k(rootfs),32768k(rootfs_1),40960k(ubifs)";
			boot_part = "kernel_1";
			factory_part = "kernel_1";
			sysupgrade_kernel_ubipart = "kernel_1";
			sysupgrade_rootfs_ubipart = "rootfs_1";
		};
	};

	gpio-keys {
		compatible = "gpio-keys";

		key-reset {
			label = "reset";
			linux,code = <KEY_RESTART>;
			gpios = <&pio 1 GPIO_ACTIVE_LOW>;
		};

		key-wps {
			label = "wps";
			linux,code = <KEY_WPS_BUTTON>;
			gpios = <&pio 0 GPIO_ACTIVE_LOW>;
		};
	};

	gpio-leds {
		compatible = "gpio-leds";

		led-0 {
			label = "blue:status";
			gpios = <&pio 9 GPIO_ACTIVE_LOW>;
		};

		led-1 {
			label = "green:status";
			gpios = <&pio 10 GPIO_ACTIVE_LOW>;
		};

		led-2 {
			label = "red:status";
			gpios = <&pio 11 GPIO_ACTIVE_LOW>;
		};
	};

	memory@40000000 {
		device_type = "memory";
		reg = <0x40000000 0x10000000>;
	};

	bl2_verify {
		bl2_compatible = "spim-nand";
	};
};

&eth {
	status = "okay";
	mediatek,gmac-id = <0>;
	phy-mode = "2500base-x";
	mediatek,switch = "auto";
	reset-gpios = <&pio 39 GPIO_ACTIVE_HIGH>;

	fixed-link {
		speed = <2500>;
		full-duplex;
	};
};

&pio {
	spi_flash_pins: spi0-pins-func-1 {
		mux {
			function = "flash";
			groups = "spi0", "spi0_wp_hold";
		};

		conf-pu {
			pins = "SPI0_CS", "SPI0_HOLD", "SPI0_WP";
			drive-strength = <MTK_DRIVE_4mA>;
			bias-pull-up = <MTK_PUPD_SET_R1R0_11>;
		};

		conf-pd {
			pins = "SPI0_CLK", "SPI0_MOSI", "SPI0_MISO";
			drive-strength = <MTK_DRIVE_4mA>;
			bias-pull-down = <MTK_PUPD_SET_R1R0_11>;
		};
	};
};

&spi0 {
	#address-cells = <1>;
	#size-cells = <0>;
	pinctrl-names = "default";
	pinctrl-0 = <&spi_flash_pins>;
	status = "okay";
	must_tx;
	enhance_timing;
	dma_ext;
	ipm_design;
	support_quad;
	tick_dly = <2>;
	sample_sel = <0>;

	spi_nand@0 {
		compatible = "spi-nand";
		reg = <0>;
		spi-max-frequency = <52000000>;
	};
};

&uart0 {
	status = "okay";
};

&watchdog {
	status = "disabled";
};
